<Window x:Class="DatiInterfOracleSpatial.GeoDataOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Visualizzazione GEO_DATI su Google Maps Oracle Spatial" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ListBox -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Prima riga: ListBox e GridSplitter -->
        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="LstSt"
                     MinWidth="100" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="0"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstStrada"
                     MinWidth="120" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="2"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstKmSito"
                     MinWidth="120" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="4"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="5" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstSensore"
                     MinWidth="80" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="6"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="7" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstPeriodo"
                     MinWidth="120" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="8"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="9" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstTipo"
                     MinWidth="80" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="10"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
            <GridSplitter Grid.Column="11" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#DDD" ShowsPreview="True"/>

            <ListBox x:Name="LstDirezione"
                     MinWidth="80" MinHeight="60"
                     MaxHeight="180"
                     SelectionMode="Multiple"
                     SelectionChanged="Filtro_SelectionChanged"
                     Grid.Column="12"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
        </Grid>

        <!-- Seconda riga: Pulsanti, CheckBox e Legenda -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8,0,8,8" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button x:Name="BtnCaricaDati"
                    Content="Carica GEO_DATI"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="BtnCaricaDati_Click"/>
            <Button x:Name="BtnCreaOverlay"
                    Content="Crea Overlay"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="BtnCreaOverlay_Click"/>
            <Button x:Name="BtnRimuoviOverlay"
                    Content="Rimuovi Overlay"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="BtnRimuoviOverlay_Click"/>
            <CheckBox x:Name="ChkAutoAggiorna" 
                      Content="Auto-aggiorna con lo zoom" 
                      VerticalAlignment="Center"
                      Margin="8,0,0,0"
                      IsChecked="True"/>
            <Border x:Name="LegendBorder"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="LegendMinLabel" Text="-5" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <Image x:Name="LegendImage" Width="180" Height="20" Stretch="Fill" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LegendMaxLabel" Text="+5" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- WebView2 per Google Maps -->
        <wv2:WebView2 x:Name="WebView" Grid.Row="2" />

        <!-- Overlay di caricamento -->
        <Border x:Name="LoadingOverlay"
             Grid.Row="2"
             Background="#80000000"
             Visibility="Collapsed"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="120" Height="20"/>
                <TextBlock Text="Caricamento dati..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Barra stato -->
        <StatusBar Grid.Row="3" Height="22">
            <TextBlock x:Name="StatusText" Text="Pronto"/>
        </StatusBar>
    </Grid>
</Window>