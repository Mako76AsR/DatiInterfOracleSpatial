<Window x:Class="GoogleMapsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Visualizzatore CSV su Google Maps" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra superiore con pulsanti -->
        <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
            <Button x:Name="BtnCaricaCSV"
                    Content="Carica CSV"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="BtnCaricaCSV_Click"/>
            <Button x:Name="BtnCaricaDaDB"
                     Content="Carica da DB"
                     Width="120"
                     Height="32"
                     Margin="0,0,8,0"
                     Click="BtnCaricaDaDB_Click"/>
            <Button x:Name="BtnPulisciMappa"
                    Content="Pulisci Mappa"
                    Width="120"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="BtnPulisciMappa_Click"/>
            <Button Name="BtnForceMarkers" Content="Forza Visibilità Marker" 
        Width="150" Height="30" 
        VerticalAlignment="Bottom" HorizontalAlignment="Left"
        Margin="10,0,0,10" Click="BtnForceMarkers_Click"/>
        </StackPanel>

        <!-- WebView2 per Google Maps -->
        <wv2:WebView2 x:Name="WebView" Grid.Row="1" />

        <!-- Barra stato -->
        <StatusBar Grid.Row="2" Height="22">
            <TextBlock x:Name="StatusText" Text="Pronto"/>
        </StatusBar>
    </Grid>
</Window>