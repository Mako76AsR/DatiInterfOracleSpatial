<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        Title="Prototipo per visualizzazione dati interferometrici su Mappa" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra superiore con pulsanti per login e caricamento CSV -->
        <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
            <Button x:Name="BtnGeoOverlay"
Content="Geo Overlay"
Width="120"
Height="32"
Margin="0,0,8,0"
Click="BtnGeoOverlay_Click"/>
        </StackPanel>           


    </Grid>
</Window>